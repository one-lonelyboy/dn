/* pages/settingGoodsType/index.wxss */
.stDoodsType {
  padding: 24rpx;
}
.stDoodsType .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 48rpx;
  margin-bottom: 24rpx;
}
.stDoodsType .title .td {
  font-size: 40rpx;
  color: red;
}
.stDoodsType .goodsList .goodsItem {
  border: 1px solid #ccc;
  height: 78rpx;
  display: flex;
  padding: 12rpx;
  margin-bottom: 12rpx;
}
.stDoodsType .goodsList .goodsItem .left {
  width: 110rpx;
  line-height: 54rpx;
  text-align: center;
  margin-right: 12rpx;
}
.stDoodsType .goodsList .goodsItem .center {
  width: 420rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.stDoodsType .goodsList .goodsItem .center .image,
.stDoodsType .goodsList .goodsItem .center .name {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-wrap: break-word;
}
.stDoodsType .goodsList .goodsItem .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.stDoodsType .goodsList .goodsItem .right .top {
  color: red;
  cursor: pointer;
}
.stDoodsType .modalview .titleview {
  margin-top: 24rpx;
}
.stDoodsType .modalview input {
  width: 100%;
  height: 18rpx;
  border: 1px solid #eee;
}
.stDoodsType .modalview .imageview {
  display: flex;
  justify-content: center;
  height: 320rpx;
  width: 100%;
}
.stDoodsType .modalview .imageview .centen {
  border: 1px solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 320rpx;
  width: 320rpx;
}
.stDoodsType .modalview .imageview .centen .iocn {
  font-size: 48rpx;
}
.stDoodsType .modalview .imageview .centen image {
  width: 100%;
  height: 100%;
}
