/* pages/details/index.wxss */
.goodDetails {
  background-color: #f5f5f5;
}
.goodDetails .swiperview {
  width: 100%;
  height: 380rpx;
}
.goodDetails .swiperview swiper {
  height: 100%;
  width: 100%;
}
.goodDetails .swiperview swiper .imageSwiper {
  width: 100%;
  height: 380rpx;
}
.goodDetails .titleview {
  padding: 16rpx 16rpx;
  background-color: #fff;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}
.goodDetails .titleview .name {
  width: 100%;
}
.goodDetails .titleview .price {
  color: red;
}
.goodDetails .specificationList {
  margin-top: 18rpx;
  padding: 16rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.goodDetails .specificationList .list {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
}
.goodDetails .explain,
.goodDetails .characteristic {
  margin-top: 18rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.goodDetails .explain .title,
.goodDetails .characteristic .title {
  font-weight: 900;
  padding: 16rpx;
}
.goodDetails .explain .bady,
.goodDetails .characteristic .bady {
  padding: 24rpx;
}
.goodDetails .iamgesList .images {
  width: 100%;
  height: 380rpx;
}
.goodDetails .iamgesList .images image {
  height: 100%;
  width: 100%;
}
