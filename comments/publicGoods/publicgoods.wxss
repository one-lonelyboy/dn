/* comments/publicGoods/publicgoods.wxss */
.goodsList {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: #eee;
}
.goodsList .goodnav {
  width: 49%;
  height: 500rpx;
  border-radius: 12rpx;
  margin-top: 12rpx;
  background-color: #fff;
}
.goodsList .goodnav .good {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.goodsList .goodnav .good .images {
  width: 100%;
  height: 340rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  overflow: hidden;
}
.goodsList .goodnav .good .images image {
  width: 100%;
  height: 100%;
}
.goodsList .goodnav .good .name {
  padding: 12rpx;
  height: 90rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodsList .goodnav .good .price {
  color: red;
  padding: 0 12rpx;
}
.goodsList :nth-child(odd) {
  margin-right: 2%;
}
